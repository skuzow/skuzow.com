---
import { cn } from '@/lib/utils';

interface Props {
  id?: string;
  href: string;
  title: string;
  newTab?: boolean;
  underline?: boolean;
  class?: string;
}

const {
  id,
  href,
  title,
  newTab = true,
  underline = true,
  class: className
} = Astro.props;
---

<a
  id={id}
  href={href}
  title={title}
  aria-label={title}
  target={newTab ? '_blank' : '_self'}
  rel="noopener noreferrer"
  class={cn(underline ? 'hover:underline' : '', className)}><slot /></a
>
