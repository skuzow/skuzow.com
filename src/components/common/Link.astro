---
import { cn } from '@/lib/utils';

interface Props {
  id?: string;
  href: string;
  title: string;
  newTab?: boolean;
  styled?: boolean;
  class?: string;
}

const {
  id,
  href,
  title,
  newTab = true,
  styled = true,
  class: className
} = Astro.props;
---

<a
  id={id}
  href={href}
  title={title}
  aria-label={title}
  target={newTab ? '_blank' : '_self'}
  rel="noopener noreferrer"
  class={cn(styled ? 'underline hover:text-muted-foreground' : '', className)}
  ><slot /></a
>
