---
import VerticalLines from '@/components/common/background/VerticalLines.astro';

import { navItems } from '@/constants/navItems';
---

<header
  id="header"
  class="sticky top-0 overflow-x-hidden border-y-[1.33px] border-white
  border-opacity-50 bg-background py-3"
>
  <nav class="text-welcome flex items-center justify-center font-header">
    <VerticalLines />
    {
      navItems.map((item) => (
        <div class="flex items-start justify-start">
          <a
            aria-label={item.label}
            href={item.url}
            class="transition hover:text-secondary"
          >
            {item.label}
          </a>
          {item !== navItems[navItems.length - 1] && <span>Â·</span>}
        </div>
      ))
    }
  </nav>
</header>
