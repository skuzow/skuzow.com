---
import TriangleIcon from '@/components/icons/TriangleIcon.astro';

interface Props {
  id: string;
  title?: string;
  class?: string;
}

const { id, title, class: className } = Astro.props;
---

<section id={id} data-section={id} class={className}>
  {
    title && (
      <div class="mb-5 flex items-center gap-3 text-xl font-semibold">
        <TriangleIcon size={18} class="rotate-180" />
        <h2 class="font-mono">{title.toUpperCase()}</h2>
      </div>
    )
  }
  <slot />
</section>
