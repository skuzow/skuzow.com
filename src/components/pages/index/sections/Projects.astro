---
import Section from '@/components/common/Section.astro';
import Link from '@/components/common/Link.astro';
import TriangleIcon from '@/components/icons/TriangleIcon.astro';
import Project from '@/components/pages/index/Project.astro';

import { PROJECTS, type Project as ProjectType } from '@/constants/projects';

import { type SectionProps as Props } from '@/constants/sections';

const { section } = Astro.props;

const importantProjects: ProjectType[] = PROJECTS.slice(0, 2);
---

<Section id={section.label} title="projects">
  <Link
    slot="title-button"
    href="/projects"
    title="Projects"
    newTab={false}
    class="flex items-center gap-2 font-mono font-semibold"
  >
    more
    <TriangleIcon size={12} class="rotate-90" />
  </Link>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    {
      importantProjects.map((project: ProjectType) => (
        <Project project={project} />
      ))
    }
  </div>
</Section>
