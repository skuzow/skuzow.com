---
import Link from '@/components/common/Link.astro';
import { Badge } from '@/components/ui/badge';

import { type Technology } from '@/constants/technologies';

interface Props {
  technology: Technology;
}

const { technology } = Astro.props;
---

<Link href={technology.website} title={technology.title} underline={false}>
  <Badge variant="secondary" class="gap-1.5 font-mono">
    <technology.icon size={14} />
    {technology.title}
  </Badge>
</Link>
