---
import { Image } from 'astro:assets';
import { Linkedin, Github, Sun } from 'lucide-vue-next';

import Link from '@/components/common/Link.astro';
import ButtonHover from '@/components/common/ButtonHover.astro';
---

<header transition:persist class="sticky top-0 z-10 py-4 backdrop-blur-md">
  <nav class="container flex max-w-4xl flex-1 justify-between">
    <Link
      href="/"
      title="skuzow.com"
      newTab={false}
      styled={false}
      class="flex items-center gap-3"
    >
      <Image
        src="/logo.avif"
        alt="logo"
        width="40"
        height="40"
        loading="eager"
        class="rounded-full"
      />
      <span class="font-mono hover:underline">skuzow.com</span>
    </Link>

    <div class="flex items-center gap-1">
      <Link
        href="https://www.linkedin.com/in/alejandro-porras-torrecilla"
        title="LinkedIn"
        styled={false}
      >
        <ButtonHover>
          <Linkedin size={20} />
        </ButtonHover>
      </Link>

      <Link href="https://github.com/skuzow" title="Github" styled={false}>
        <ButtonHover>
          <Github size={20} />
        </ButtonHover>
      </Link>

      <ButtonHover>
        <Sun size={20} />
      </ButtonHover>
    </div>
  </nav>
</header>
